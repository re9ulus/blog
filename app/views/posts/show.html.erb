<p id="notice"><%= notice %></p>

<header>
  <h1><%= @post.title %></h1>
</header>

<p>
  <%= @post.content %>
</p>

<hr>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
	<div>
		<p>
			<b><%= comment.email %></b>
		</p>
		<p>
			<%= comment.content %>
		</p>
	</div>
<% end %>

<h2>Add a comment: </h2>
<%= form_for ([@post, @post.comments.build]) do |f| %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :content %><br />
		<%= f.text_area :content %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
